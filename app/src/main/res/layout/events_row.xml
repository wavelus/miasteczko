<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="100dp" xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView android:layout_width="match_parent"
                                        android:layout_marginStart="8dp"
                                        android:layout_marginTop="8dp"
                                        android:layout_marginEnd="8dp"
                                        android:layout_marginBottom="8dp"
                                        app:layout_constraintBottom_toBottomOf="parent"
                                        app:layout_constraintEnd_toEndOf="parent"
                                        app:layout_constraintStart_toStartOf="parent"
                                        app:layout_constraintTop_toTopOf="parent"
                                        app:layout_constraintVertical_bias="0.021"
                                        app:layout_constraintLeft_toLeftOf="parent"
                                        app:layout_constraintRight_toRightOf="parent"

                                        android:layout_height="wrap_content">
        <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent">
            <TextView
                    android:id="@+id/eventNameRow"
                    android:textSize="18sp"
                    android:text="Nazwa wydarzenia"
                    android:gravity="center_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:id="@+id/eventOwnerRow"
                    android:layout_marginTop="30dp"
                    android:text="Założyciel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:layout_alignParentStart="true"
                    android:layout_marginStart="0dp"/>
            <TextView
                    android:id="@+id/eventStatusRow"
                    android:layout_marginTop="70dp"
                    android:text="Status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:layout_alignParentStart="true"
                    android:layout_marginStart="0dp"/>
            <TextView
                    android:id="@+id/eventPlaceRow"
                    android:layout_marginTop="50dp"
                    android:text="Miejsce"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:layout_alignParentStart="true"
                    android:layout_marginStart="0dp"/>
            <TextView
                    android:layout_marginTop="30dp"
                    android:layout_toLeftOf="@id/eventEndRow"
                    android:text="Do: "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toStartOf="@+id/eventStartRow"/>
            <TextView
                    android:id="@+id/eventStartRow"
                    android:layout_marginTop="30dp"
                    android:layout_alignParentRight="true"
                    android:text="Data rozpoczęcia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:layout_alignParentEnd="true"
                    android:layout_marginEnd="10dp"/>
            <TextView
                    android:layout_marginTop="25dp"
                    android:layout_below="@id/eventStartRow"
                    android:layout_toLeftOf="@id/eventEndRow"
                    android:text="Do: "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toStartOf="@+id/eventEndRow"/>

            <TextView
                    android:id="@+id/eventEndRow"
                    android:layout_marginTop="25dp"
                    android:layout_below="@id/eventStartRow"
                    android:layout_alignParentRight="true"
                    android:text="Data zakończenia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:layout_alignParentEnd="true"
                    android:layout_marginEnd="10dp"/>

        </RelativeLayout>


    </android.support.v7.widget.CardView>


</android.support.constraint.ConstraintLayout>