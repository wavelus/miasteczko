<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg"
        tools:context=".fragments.AllEventsFragment">
    <LinearLayout android:layout_width="match_parent"
                  android:orientation="vertical"
                  android:layout_height="wrap_content">

        <ImageView
                android:src="@drawable/poli"
                android:layout_width="match_parent"
                android:padding="10dp"
                android:visibility="gone"
                android:layout_height="260dp" android:id="@+id/mapPoliImageView"/>
        <ImageView
                android:visibility="gone"
                android:layout_width="match_parent"
                android:padding="10dp"
                android:layout_height="273dp" app:srcCompat="@drawable/msmap" android:id="@+id/mapMiasteczkoImageView"/>
        <android.support.v7.widget.CardView
                android:id="@+id/flankiDescCV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp">

            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <Button
                        android:id="@+id/tableFlankiDescBtn"
                        android:text="#1 Flankowy Zaułek"
                        android:background="@color/colorPrimaryDark"
                        android:padding="10dp"
                        android:textSize="28sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                <TextView
                        android:text="Ulubiona gra każdego studenta? Flanki! Tu możesz zrelaksować się po ciężkim dniu."
                        android:layout_width="match_parent"
                        android:padding="5dp"
                        android:textAlignment="center"
                        android:layout_height="wrap_content" android:id="@+id/flankiDescTV"/>


            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp">

            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <Button
                        android:text="#2 Sportowe Kosz'ary"
                        android:background="@color/colorPrimaryDark"
                        android:padding="10dp"
                        android:textSize="28sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                <TextView
                        android:text="Sport to zdrowie. Czujesz się jak gwiazda NBA? To miejsce jest stworzone dla Ciebie"
                        android:padding="5dp"
                        android:textAlignment="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />


            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp">

            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <Button
                        android:text="#3 Piwna siedziba"
                        android:background="@color/colorPrimaryDark"
                        android:padding="10dp"
                        android:textSize="28sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                <TextView
                        android:text="Piwna siedziba to miejsce, jak sama nazwa wskazuje, gdzie można wypić piwo. Bezalkholowe oczywiście."
                        android:padding="5dp"
                        android:textAlignment="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />


            </LinearLayout>

        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp">

            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <Button
                        android:id="@+id/tableBeerHouseDescBtn"
                        android:text="#4 Śpiewające Gitary"
                        android:background="@color/colorPrimaryDark"
                        android:padding="10dp"
                        android:textSize="28sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                <TextView
                        android:text="Nie trzeba być śpiewakiem operowym, żeby móc śpiewać i dobrze się bawić. Zabierz ze sobą gitarę i wpadaj!"
                        android:padding="5dp"
                        android:textAlignment="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>


            </LinearLayout>

        </android.support.v7.widget.CardView>


    </LinearLayout>

</ScrollView>