<?xml version="1.0" encoding="utf-8"?>
<ScrollView
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:background="@drawable/bg"
android:layout_height="match_parent"
tools:context=".activities.SearchEventsActivity">
<LinearLayout android:layout_width="match_parent"
              android:orientation="vertical"
              android:layout_height="wrap_content">

<EditText
        android:padding="10dp"
        android:id="@+id/searchByTagET"
        android:layout_marginBottom="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:hint="Wpisz tag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Button
            android:layout_gravity="center"
            android:id="@+id/searchByTagBtn"
            android:text="Wyszukaj"
            android:background="@color/colorIndivateTab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <android.support.v7.widget.CardView
            android:id="@+id/searchMiasteczkoCV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp">

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="wrap_content">

            <Button
                    android:id="@+id/searchMiasteczkoBtn"
                    android:text="Miasteczko AGH"
                    android:background="@color/colorPrimaryDark"
                    android:padding="10dp"
                    android:textSize="28sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            <android.support.v7.widget.RecyclerView
                    android:visibility="gone"
                    android:id="@+id/searchMiasteczkoRV"
                    android:layout_width="368dp"
                    android:layout_height="460dp">

            </android.support.v7.widget.RecyclerView>


        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
            android:id="@+id/searchPoliCV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp">

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="wrap_content">

            <Button
                    android:id="@+id/searchPoliBtn"
                    android:text="Park CzyÅ¼yny"
                    android:background="@color/colorPrimaryDark"
                    android:padding="10dp"
                    android:textSize="28sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            <android.support.v7.widget.RecyclerView
                    android:visibility="gone"
                    android:id="@+id/searchPoliRV"
                    android:layout_width="368dp"
                    android:layout_height="460dp">

            </android.support.v7.widget.RecyclerView>


        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>

</ScrollView>