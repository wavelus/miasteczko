<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg"
        tools:context=".activities.signup.SignUpActivity">

    <Button
            android:stateListAnimator="@drawable/state_list_animator_z"
            android:background="@color/colorAccent"
            android:textColor="@color/grey_100"
            android:text="Adres e-mail"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/signUpEmailBtn" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textView2"/>
    <Button
            android:stateListAnimator="@drawable/state_list_animator_z"
            android:background="#3b5998"
            android:textColor="@color/grey_100"
            android:text="konto Facebook"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:id="@+id/signUpFacebookBtn"
            app:layout_constraintTop_toBottomOf="@+id/signUpEmailBtn"
            android:layout_marginTop="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>
    <Button
            android:stateListAnimator="@drawable/state_list_animator_z"
            android:background="#ff5733"
            android:textColor="@color/grey_100"
            android:text="Konto Google"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:id="@+id/signUpGoogleBtn" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/signUpFacebookBtn" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>
    <TextView
            android:text="Rejestracja"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent" android:textSize="40sp"
            android:textColor="@android:color/black" android:textStyle="bold|italic"/>

</android.support.constraint.ConstraintLayout>