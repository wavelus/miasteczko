<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
             tools:context=".fragments.PolytechnicEvents">

    <LinearLayout android:layout_width="match_parent"
                  android:orientation="vertical"
                  android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
                android:id="@+id/flankiPolyCV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp">

            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:layout_height="wrap_content">

                <Button
                        android:id="@+id/tablePolyFlankiBtn"
                        android:text="Flankowy Zaułek"
                        android:background="@color/colorPrimaryDark"
                        android:padding="10dp"
                        android:textSize="28sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                <android.support.v7.widget.RecyclerView
                        android:visibility="gone"
                        android:id="@+id/tablePolyFlankiRecyclerView"
                        android:layout_width="368dp"
                        android:layout_height="460dp">

                </android.support.v7.widget.RecyclerView>


            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
                android:id="@+id/sportPolyCV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp">

            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:layout_height="wrap_content">

                <Button
                        android:id="@+id/tablePolySportBtn"
                        android:text="Sportowe Kosz'ary"
                        android:background="@color/colorPrimaryDark"
                        android:padding="10dp"
                        android:textSize="28sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                <android.support.v7.widget.RecyclerView
                        android:visibility="gone"
                        android:id="@+id/tablePolySportRecyclerView"
                        android:layout_width="368dp"
                        android:layout_height="460dp">

                </android.support.v7.widget.RecyclerView>


            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
                android:id="@+id/beerPolyCV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp">

            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:layout_height="wrap_content">

                <Button
                        android:id="@+id/tablePolyBeerHouseBtn"
                        android:text="Piwna siedziba"
                        android:background="@color/colorPrimaryDark"
                        android:padding="10dp"
                        android:textSize="28sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                <android.support.v7.widget.RecyclerView
                        android:visibility="gone"
                        android:id="@+id/tablePolyBeerHouseRecyclerView"
                        android:layout_width="368dp"
                        android:layout_height="460dp">

                </android.support.v7.widget.RecyclerView>


            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
                android:id="@+id/guitarPolyCV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp">

            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:layout_height="wrap_content">

                <Button
                        android:id="@+id/tablePolyGuitarBtn"
                        android:text="Śpiewające Gitary"
                        android:background="@color/colorPrimaryDark"
                        android:padding="10dp"
                        android:textSize="28sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                <android.support.v7.widget.RecyclerView
                        android:visibility="gone"
                        android:id="@+id/tablePolyGuitarRecyclerView"
                        android:layout_width="368dp"
                        android:layout_height="460dp">

                </android.support.v7.widget.RecyclerView>


            </LinearLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>

</ScrollView>