<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg"
        tools:context=".activities.login.LoginActivity"
        android:id="@+id/activity_login_root"
>


    <Button
            android:stateListAnimator="@drawable/state_list_animator_z"
            android:background="@color/colorAccent"
            android:textColor="@color/grey_100"
            android:text="Zaloguj przy pomocy adresu e-mail"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/loginEmailBtn" android:layout_marginTop="32dp" app:layout_constraintTop_toTopOf="parent"/>
    <Button
            android:stateListAnimator="@drawable/state_list_animator_z"
            android:background="#ff5733"
            android:textColor="@color/grey_100"
            android:text="Zaloguj przy pomocy konta Google"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:id="@+id/LoginGoogleBtn"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/buttonFacebookLogin"/>
    <com.facebook.login.widget.LoginButton
            android:id="@+id/buttonFacebookLogin"
            android:layout_width="320dp"
            android:layout_height="42dp"
            android:layout_gravity="center_horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/loginEmailBtn"/>


</android.support.constraint.ConstraintLayout>