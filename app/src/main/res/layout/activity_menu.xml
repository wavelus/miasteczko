<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg"
        tools:context=".activities.MenuActivity">
    <android.support.v7.widget.CardView android:layout_width="300dp"
                                        android:id="@+id/menuCV"
                                        android:layout_height="wrap_content" app:layout_constraintEnd_toEndOf="parent"
                                        android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
                                        android:layout_marginStart="8dp" android:layout_marginTop="8dp"
                                        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
                android:background="#0D2C54"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <TextView
                    android:text="Aktualnie wybrane miejsce"
                    android:textColor="@color/colorAccent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:id="@+id/menuTownTV"
                    android:padding="10dp"
                    android:text="Miasteczko"
                    android:textColor="@color/colorPrimary"
                    android:textSize="24sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>


    <Button
            android:stateListAnimator="@drawable/state_list_animator_z"
            android:background="@color/colorAccent"
            android:textColor="@color/grey_100"
            android:text="Wszystkie wydarzenia"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/menuCV"
            android:id="@+id/allEventsBtn" tools:layout_editor_absoluteY="16dp"/>
    <Button
            android:stateListAnimator="@drawable/state_list_animator_z"
            android:background="@color/colorAccent"
            android:textColor="@color/grey_100"
            android:text="Miasteczkowe wydarzenia"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:id="@+id/userEventsBtn" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/addEventBtn"/>
    <Button
            android:stateListAnimator="@drawable/state_list_animator_z"
            android:background="@color/colorAccent"
            android:textColor="@color/grey_100"
            android:text="Dodaj wydarzenie"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:id="@+id/addEventBtn"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/allEventsBtn"/>
    <Button
            android:stateListAnimator="@drawable/state_list_animator_z"
            android:background="@color/colorAccent"
            android:textColor="@color/grey_100"
            android:text="Utworzone wydarzenia"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:id="@+id/userCreatedEventsBtnw"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/userEventsBtn"/>
    <Button
            android:stateListAnimator="@drawable/state_list_animator_z"
            android:background="@color/colorAccent"
            android:textColor="@color/grey_100"
            android:text="Wyświetl mapę"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:id="@+id/mapBtn" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/userCreatedEventsBtnw" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>
    <Button
            android:stateListAnimator="@drawable/state_list_animator_z"
            android:background="@color/colorAccent"
            android:textColor="@color/grey_100"
            android:text="O aplikacji"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:id="@+id/aboutAppBtn" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/mapBtn" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>

</android.support.constraint.ConstraintLayout>